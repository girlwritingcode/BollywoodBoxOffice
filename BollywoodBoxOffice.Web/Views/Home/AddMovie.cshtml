@{
    ViewBag.Title = "Add Movie";
}

<h2>Add a New Movie</h2>
<form action="/Home/AddMovie/" method="post">
    <input type="text" name="name" placeholder="Movie Name" />
    <br />
    <input type="number" name="year" placeholder="Movie Year" />
    <br />
    <input type="text" name="url" placeholder="Photo URL" />
    <br />
    <input type="text" name="gross" placeholder="Gross Profit" />
    <br />
    <input type="text" name="studio" placeholder="Studio" />
    <br />
    <input type="text" name="director" placeholder="Director" />
    <br />
    <input type="submit" class="btn btn-primary"/>
</form>

